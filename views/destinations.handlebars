<h2>Destinations</h2>

<div class="destinations-container">
  {{#each destinations}}
    <div class="card-div" onclick=navigateToDestination('{{this.image}}')>
      <div class="card-header">
        <div class="img-div">
          <img src="images/destinations/{{this.image}}" alt="{{this.name}}" />
        </div>
        <div class="name-div">
          <h4 class="name">{{this.name}}</h4>
          <div class="location-div">
            <img src="images/pin.png" alt="pin" /><p>{{this.location}}</p>
          </div>
        </div>
      </div>
      <div class="card-content">
        <p>{{this.short_description}}</p>
      </div>
    </div>
  {{else}}
    <li>Personne n'a été encodé !</li>
  {{/each}}
</div>

<script>
  function navigateToDestination(imageName) {
    const destinationId = imageName.split('.')[0]; // Remove file extension
    window.location.href = `/destinations/${destinationId}`;
  }
</script>